{
  "version": "2.0.0",
  "problemMatcher": {
    "owner": "odin",
    "source": "Odin",
    "fileLocation": "absolute",
    "pattern": {
      "regexp": "^(.*?)(\\((\\d+):(\\d+)\\))\\s+(Syntax\\s+)?(Error|Warning):\\s+(.+)$",
      "file": 1,
      "line": 3,
      "column": 4,
      "severity": 6,
      "message": 7
    }
  },
  "tasks": [
    {
      "label": "build-debug",
      "type": "process",
      "command": "odin",
      "args": [
        "build",
        "src",
        "-out:build/oaaa.exe",
        "-debug"
      ],
      "problemMatcher": []
    },
    {
      "label": "build-release",
      "type": "process",
      "command": "odin",
      "args": [
        "build",
        "src",
        "-out:build/oaaa.exe",
        "-o:aggressive",
        "-debug",
        // "-no-bounds-check",
        // "-disable-assert",
        // "-no-type-assert"
      ],
      "problemMatcher": []
    },
    {
      "label": "build-shared-debug",
      "type": "process",
      "command": "odin",
      "args": [
        "build",
        "src",
        "-out:build/liboaaa.so",
        "-debug",
        "-build-mode:shared"
      ],
      "problemMatcher": []
    },
    {
      "label": "build-shared-release",
      "type": "process",
      "command": "odin",
      "args": [
        "build",
        "src",
        "-out:build/liboaaa.so",
        "-debug",
        "-o:aggressive",
        "-build-mode:shared",
        // "-no-bounds-check",
        // "-disable-assert",
        // "-no-type-assert",
      ],
      "problemMatcher": []
    },
    {
      "label": "build-test-debug",
      "type": "process",
      "command": "odin",
      "args": [
        "build",
        "tests",
        "-out:build/tests",
        "-debug",
        "-collection:src=src"
      ],
      "problemMatcher": []
    },
    {
      "label": "run-tests",
      "type": "shell",
      "command": "odin test tests",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}